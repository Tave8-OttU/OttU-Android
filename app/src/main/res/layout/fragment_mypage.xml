<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:id="@+id/tv_frag_mypage_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nickname"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_r5black1_4_sblue"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오뜨 Level"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/pb_frag_mypage_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/bg_progress"/>

                <TextView
                    android:id="@+id/tv_frag_mypage_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:text="5"
                    android:textColor="@color/main_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="관심 장르"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_frag_mypage_genre1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_select"
                android:text="@string/genre_1"
                android:textSize="12sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_frag_mypage_genre2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_button_select"
                android:text="@string/genre_2"
                android:textSize="12sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_frag_mypage_genre3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_select"
                android:text="@string/genre_3"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/mypage_my_ottu"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_r5black1_4_slightblue"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:id="@+id/ll_frag_mypage_my_recruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_my_recruit"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next"
                    app:tint="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/ll_frag_mypage_my_ott"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_my_ott_service"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next"
                    app:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/mypage_my_information"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_r5black1_4_slightblue"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:id="@+id/ll_frag_mypage_change_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_change_nick"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next"
                    app:tint="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/ll_frag_mypage_change_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_change_genre"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next"
                    app:tint="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/ll_frag_mypage_change_kakaoid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_change_kakaotalk_id"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next"
                    app:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/mypage_account"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_r5black1_4_slightblue"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:id="@+id/ll_frag_mypage_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_logout"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next"
                    app:tint="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/ll_frag_mypage_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypage_withdrawal"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next"
                    app:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
