<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_r5white_sgrey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <TextView
            android:id="@+id/tv_item_request_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="20dp"
        android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_item_request_accept"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_r5blue"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="수락"
        android:textSize="12sp"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_item_request_refuse"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_r5black1_4"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="수락 취소"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"/>
</LinearLayout>
