<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_r5white"
    android:orientation="vertical"
    android:padding="20dp" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검색 필터"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="모집 인원 수"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_dialog_filter_headcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dialog_filter_headcount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="전체"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/iv_dialog_filter_show"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:enabled="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_down" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_filter_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="5dp"
            android:text="@string/cancel"
            android:includeFontPadding="false"
            android:textColor="@color/main_color"
            android:textSize="16sp"/>

        <View
            android:layout_width="35dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_filter_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="5dp"
            android:text="@string/apply"
            android:includeFontPadding="false"
            android:textColor="@color/main_color"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
