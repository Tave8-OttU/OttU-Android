<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/bg_r5white"
    android:orientation="vertical"
    android:padding="15dp">
    <ImageView
        android:id="@+id/iv_dialog_evaluation_ott"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:contentDescription="@string/ott_service"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_ott_netflix" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팀원 신뢰도 평가"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:text="해당 평가는 오뜨 level에 반영되며,\n추후 사용자의 신뢰도를 나타내줍니다."
        android:includeFontPadding="false"
        android:textColor="@color/sub_text_color"
        android:fontFamily="@font/notosans_light"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_evaluation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_dialog_evaluation_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_r5blue"
        android:includeFontPadding="false"
        android:minWidth="80dp"
        android:minHeight="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="@string/ok"
        android:textSize="14sp"
        android:textStyle="bold"/>
</LinearLayout>
