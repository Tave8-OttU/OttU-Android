<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/bg_r5white"
    android:orientation="vertical"
    android:padding="15dp">
    <ImageView
        android:id="@+id/iv_dialog_eval_ott"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_ott_netflix" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팀원 신뢰도 평가"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="해당 평가는 오뜨 level에 반영되며,\n추후 사용자의 신뢰도를 나타내줍니다."
        android:textColor="@color/sub_text_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_eval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_dialog_eval_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_r5blue"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="@string/submit"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>
