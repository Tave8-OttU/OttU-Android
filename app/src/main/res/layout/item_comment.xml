<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/tv_item_comment_datetime"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_item_comment_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/nickname"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_comment_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="2021-12-30 17:03:20"
            android:textColor="@color/sub_text_color"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
        android:id="@+id/tv_item_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="comment"
        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibt_item_comment_delete"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_delete"
        android:tint="@color/white"
        android:visibility="gone" />
</LinearLayout>
