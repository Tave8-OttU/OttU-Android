<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTT 서비스 커뮤니티"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_frag_community_netflix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:clickable="true"
                android:padding="15dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/ott_netflix"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ott_netflix" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <RelativeLayout
                android:id="@+id/rl_frag_community_tving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:clickable="true"
                android:padding="15dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/ott_tving"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ott_tving" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <RelativeLayout
                android:id="@+id/rl_frag_community_wavve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:clickable="true"
                android:padding="15dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/ott_wavve"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ott_wavve" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <RelativeLayout
                android:id="@+id/rl_frag_community_watcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:clickable="true"
                android:padding="15dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/ott_watcha"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ott_watcha" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <RelativeLayout
                android:id="@+id/rl_frag_community_disney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:clickable="true"
                android:padding="15dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/ott_disneyplus"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ott_disney" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <RelativeLayout
                android:id="@+id/rl_frag_community_coupangplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:clickable="true"
                android:padding="15dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/ott_coupangplay"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ott_coupang_play" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/next"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
